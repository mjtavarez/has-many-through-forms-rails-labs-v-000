<%= form_for @post do |f| %>
    Title: <%= f.text_field :title %>
    <br>
    <p>Content:
    <br>
    <%= f.text_area :content %></p>
    <br>
    <strong>Categories</strong>:<br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <br>
    <strong>Create your own: </strong><br>
    <%= f.fields_for :categories, @post.categories.build do |category_attributes| %>
        <%= category_attributes.text_field :name %><br>
    <% end %><br><br>
    <%= f.submit %>
<% end %>
